# Time-Seal Environment Configuration

# Node Environment
NODE_ENV=development

# Application URL (used for CORS, CSRF validation, and public links)
# Production: https://timeseal.online
# Development: http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Cloudflare Workers Bindings (configured in wrangler.toml)
# These are automatically injected by Cloudflare Workers runtime

# R2 Bucket Binding
# BUCKET=timeseal-storage

# D1 Database Binding
# DB=timeseal-db

# Master Encryption Key (for encrypting keyB in database)
# Generate with: openssl rand -base64 32
MASTER_ENCRYPTION_KEY=your-master-key-here
# MASTER_ENCRYPTION_KEY_PREVIOUS=old-key-here  # Optional: For zero-downtime rotation

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=10
RATE_LIMIT_WINDOW_MS=60000

# File Upload Limits
MAX_FILE_SIZE_MB=10
MAX_SEAL_DURATION_DAYS=365

# Logging
LOG_LEVEL=info
ENABLE_AUDIT_LOGS=true

# Development Only
USE_MOCK_STORAGE=true
USE_MOCK_DATABASE=true
