{
  "name": "timeseal",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "description": "Cryptographically enforced time-locked vault system with Dead Man's Switch, ephemeral messages, and zero-trust architecture",
  "keywords": [
    "encryption",
    "cryptography",
    "time-lock",
    "dead-mans-switch",
    "cloudflare-workers",
    "nextjs",
    "security",
    "privacy",
    "aes-encryption",
    "zero-trust",
    "self-hosted",
    "typescript",
    "serverless",
    "edge-computing",
    "web-crypto"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Teycir/TimeSeal.git"
  },
  "homepage": "https://timeseal.online",
  "bugs": {
    "url": "https://github.com/Teycir/TimeSeal/issues"
  },
  "author": "Teycir Ben Soltane <https://teycirbensoltane.tn>",
  "license": "SEE LICENSE IN LICENSE",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "preview": "npx @opennextjs/cloudflare build && npx @opennextjs/cloudflare preview",
    "deploy": "./scripts/deploy.sh",
    "deploy:prod": "npx @opennextjs/cloudflare build && npx wrangler deploy",
    "deploy:staging": "NEXT_PUBLIC_APP_URL=https://staging.timeseal.online npx @opennextjs/cloudflare build && npx wrangler deploy --env staging",
    "deploy:dev": "npx @opennextjs/cloudflare build && npx wrangler deploy --env development",
    "deploy:unsafe": "npx @opennextjs/cloudflare build && npx @opennextjs/cloudflare deploy",
    "typecheck": "tsc --noEmit",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv cloudflare-env.d.ts",
    "test": "jest --coverage --maxWorkers=50%",
    "test:watch": "jest --watch",
    "test:unit": "jest tests/unit --maxWorkers=50%",
    "test:integration": "jest tests/integration --maxWorkers=50%",
    "test:e2e": "playwright test -c tests/config/playwright.config.ts",
    "test:e2e:ui": "playwright test -c tests/config/playwright.config.ts --ui",
    "test:e2e:full": "playwright test -c tests/config/playwright-e2e.config.ts",
    "test:all": "npm run test && npm run test:e2e:full",
    "prepare": "[ -d .git ] && git config core.hooksPath .husky || true"
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.20231218.0",
    "@marsidev/react-turnstile": "^1.4.0",
    "@number-flow/react": "^0.5.10",
    "@opennextjs/cloudflare": "^1.14.7",
    "@react-three/drei": "^10.7.7",
    "@react-three/fiber": "^8.18.0",
    "@scure/bip32": "^2.0.1",
    "@types/bip39": "^2.4.2",
    "@types/pako": "^2.0.4",
    "@types/react-datepicker": "^6.2.0",
    "@types/three": "^0.182.0",
    "bip39": "^3.1.0",
    "canvas-confetti": "^1.9.4",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "dayjs": "^1.11.19",
    "framer-motion": "^10.16.16",
    "lucide-react": "^0.562.0",
    "next": "14.2.35",
    "pako": "^2.1.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "qrcode": "^1.5.4",
    "react": "^18",
    "react-datepicker": "^9.1.0",
    "react-dom": "^18",
    "react-dropzone": "^14.3.8",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "three": "^0.182.0",
    "winston": "^3.19.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.40.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/autocannon": "^7.12.7",
    "@types/canvas-confetti": "^1.9.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^20",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vitejs/plugin-react": "^5.1.2",
    "autocannon": "^8.0.0",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.0.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^27.3.0",
    "postcss": "^8",
    "tailwindcss": "^3.3.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5",
    "wrangler": "^4.56.0"
  }
}
