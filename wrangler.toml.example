# Cloudflare Workers Configuration
name = "timeseal"
main = "src/index.ts"
compatibility_date = "2024-01-01"

# R2 Bucket Binding
[[r2_buckets]]
binding = "BUCKET"
bucket_name = "timeseal-storage"

# D1 Database Binding
[[d1_databases]]
binding = "DB"
database_name = "timeseal-db"
database_id = "your-database-id"

# Environment Variables
[vars]
NODE_ENV = "production"
RATE_LIMIT_ENABLED = "true"
ENABLE_AUDIT_LOGS = "true"

# Secrets (set via: wrangler secret put MASTER_ENCRYPTION_KEY)
# MASTER_ENCRYPTION_KEY

# Development
[env.development]
vars = { NODE_ENV = "development", USE_MOCK_STORAGE = "true" }
